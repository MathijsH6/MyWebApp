<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8">
    <title>Project LU1 films huren</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
      /* ...je bestaande CSS... */
    </style>
  </head>
  <body>
    <header>
      <nav class="nav-btns">
        <a href="/" class="btn btn-outline-primary">Home</a>
        <a href="/films" class="btn btn-outline-primary">Films</a>
        <a href="#" class="btn btn-outline-primary">Acteurs</a>
        <a href="/about" class="btn btn-outline-primary">About</a>
        <a href="/contact" class="btn btn-outline-primary">Contact</a>
      </nav>
      <!-- Profiel dropdown -->
      <div class="dropdown" style="position: absolute; top: 1rem; right: 2rem;">
        <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-circle me-2" viewBox="0 0 16 16">
            <path d="M13.468 12.37C12.758 11.226 11.482 10.5 10 10.5c-1.482 0-2.758.726-3.468 1.87A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
            <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/>
          </svg>
          Profiel
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
          <li><a class="dropdown-item" href="/register">Registreren</a></li>
          <li><a class="dropdown-item" href="/login">Inloggen</a></li>
        </ul>
      </div>
    </header>
    <div class="container">
      <h1 class="mb-3 text-center">Sakila Films</h1>
      <input type="text" class="form-control search-bar" id="searchInput" placeholder="Zoek op titel...">
      <div id="films-list" class="row">
        <% if (typeof films !== 'undefined' && films.length > 0) { %>
          <% films.forEach(function(film) { %>
            <div class="col-md-6 col-lg-4">
              <a href="/films/<%= film.film_id %>" style="text-decoration:none; color:inherit;">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= film.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted">Jaar: <%= film.release_year %></h6>
                    <p class="card-text"><%= film.description || 'Geen beschrijving beschikbaar.' %></p>
                  </div>
                </div>
              </a>
            </div>
          <% }); %>
        <% } else { %>
          <div class="col-12 text-center"><p>Geen films gevonden.</p></div>
        <% } %>
      </div>
    </div>
    <script>
      // Zoekfunctie voor client-side filtering
      const filmsData = JSON.parse('<%- JSON.stringify(films || []) %>');
      function renderFilms(films) {
        const filmsList = document.getElementById('films-list');
        filmsList.innerHTML = '';
        if (films.length === 0) {
          filmsList.innerHTML = '<div class="col-12 text-center"><p>Geen films gevonden.</p></div>';
          return;
        }
        films.forEach(film => {
          filmsList.innerHTML += `
            <div class="col-md-6 col-lg-4">
              <a href="/films/${film.film_id}" style="text-decoration:none; color:inherit;">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">${film.title}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Jaar: ${film.release_year}</h6>
                    <p class="card-text">${film.description || 'Geen beschrijving beschikbaar.'}</p>
                  </div>
                </div>
              </a>
            </div>
          `;
        });
      }
      renderFilms(filmsData);
      document.getElementById('searchInput').addEventListener('input', function() {
        const query = this.value.toLowerCase();
        const filtered = filmsData.filter(film => film.title.toLowerCase().includes(query));
        renderFilms(filtered);
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
